{% extends 'base.html.twig' %}

{% block title %}Liste des catégories
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">

			{% include "_parties/_adminnav.html.twig" %}
			<main class="col-9 border border-white p-2">

				<h1>
					Liste des catégories
				</h1>
				<table class="table">
					<thead>

						<tr>
							<th>ID</th>
							<th>Nom</th>
							<th>Parent</th>
						</tr>
					</thead>
				</thead>
				<tbody>
				{% for categorie in categories %}
					<tr>
						<td>{{categorie.id}}</td>
						<td>{{categorie.nomcat}}</td>
						<td>
						{% if categorie.parent is not null %}
						{{categorie.parent.nomcat}}
						{% endif %}
						</td>
					</tr> 
					{% endfor %}
				</tbody>


			</main>


		</div>


	</div>


{% endblock %}
