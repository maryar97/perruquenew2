{% extends 'base.html.twig' %}

{% block title %}
	PRODUITS
{% endblock %}

{% block body %}
<main class="container">
	<section class="row">
		<div class="col-12">
			<h1>
				{{ categorie.nomcat}}

				</h1>
		</div>


		{% for produit in categorie.Produit %}
			<div class="col-4 col-sm-6 col-md-4 col-lg-3">
					<div class="card mt-3"> 

						<img src="/images/{{ produit.photo }}" class="card-img-top" alt="{{ produit.photo}}">
						<article class="card h-100">
							<div class="card-body">
								<h2 class="card-title">{{ produit.sousrubriqueart }}
								</h2>
								<p class="card-text">{{ produit.libcourt}}
								</p>
								<div class="col-4"></div>
								<a href="{{ path('app_produit_crud_detail', {'id':produit.id}) }}" class="btn btn-danger">
									Voir le d√©tail
								</a>

							</div>
						</article>
					</div>
			</div>
		{% endfor %}
		
	</section>
</main>
{% endblock %}


