{% extends 'base.html.twig' %}

{% block title %}Transporteur {% endblock %}

{% block body %}
<main class="container">
		<aside class="col-12 border border-light bg-white p-2">
			<article class="card mb-3">
				<div class="card-header">
    <h1>Transporteur </h1>

    	<div class="card-body">
					<table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Contenu</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transporteur in transporteurs %}
            <tr>
                <td>{{ transporteur.nom }}</td>
                <td>{{ transporteur.contenu }}</td>
                <td>{{ transporteur.prix }}</td>
                <td>
                    <a href="{{ path('app_transporteur_show', {'id': transporteur.id}) }}">Afficher</a>
                    <a href="{{ path('app_transporteur_edit', {'id': transporteur.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_transporteur_new') }}">Créer un nouveau</a>
{% endblock %}
